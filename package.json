{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@ahmedbna/bna",
  "version": "1.0.0",
  "type": "module",
  "description": "BNA - Expo React Native CLI for rapid app development",
  "main": "dist/index.js",
  "bin": {
    "bna": "bin/bna.js"
  },
  "scripts": {
    "build": "npm run clean && tsc && npm run copy-templates && npm run copy-registry",
    "copy-templates": "cp -r src/templates dist/",
    "copy-registry": "cp -r src/registry dist/",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist",
    "release:patch": "npm version patch && npm publish --access public",
    "release:minor": "npm version minor && npm publish --access public",
    "release:major": "npm version major && npm publish --access public"
  },
  "keywords": [
    "react-native",
    "expo",
    "cli",
    "template",
    "starter",
    "ui",
    "boilerplate",
    "typescript"
  ],
  "author": "Ahmed BNA <hi@ahmedbna.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ahmedbna/cli.git"
  },
  "bugs": {
    "url": "https://github.com/ahmedbna/cli/issues"
  },
  "homepage": "https://github.com/ahmedbna/cli#readme",
  "files": [
    "dist/",
    "bin/",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "inquirer": "^9.2.12",
    "ora": "^7.0.1",
    "fs-extra": "^11.1.1",
    "validate-npm-package-name": "^5.0.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.8.0",
    "@types/validate-npm-package-name": "^4.0.2",
    "typescript": "^5.2.2",
    "eslint": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0"
  }
}
